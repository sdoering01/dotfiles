# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.

command=$HOME/.local/libexec/i3blocks/$BLOCK_NAME
separator_block_width=20
markup=pango

[bluetooth-status]
command=bluetooth-status
interval=10
separator=false
separator_block_width=12

[wifi-status]
command=wifi-status
interval=10
separator=false
separator_block_width=12

[dunst-status]
command=dunst-status
interval=once
signal=5

[battery-status]
label=
command=battery-status
battery=BAT1
interval=30

[weather-status]
command=weather-status
interval=1800

[volume]
label= 
interval=1
signal=10

[memory]
label= 
interval=30

[bandwidth]
command=$HOME/.local/libexec/i3blocks/bandwidth --inlabel " " --outlabel " "
interval=3

[cpu_usage]
label= 
interval=5

[time]
label= 
command=date '+%d.%m.%Y %H:%M:%S'
interval=1
separator=false
separator_block_width=8

